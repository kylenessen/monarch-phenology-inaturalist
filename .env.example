# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/monarch
POSTGRES_HOST_PORT=5433

# iNaturalist filters (v1 defaults)
INAT_TAXON_ID=48662
INAT_PLACE_ID=62068
INAT_QUALITY_GRADE=research
INAT_PER_PAGE=200

# Ingest behavior
INAT_BACKFILL_DAYS=7
INAT_OVERLAP_HOURS=24
INAT_SLEEP_SECONDS=0.5
INAT_MAX_PAGES_PER_RUN=0
INAT_MAX_RETRIES=5
INAT_RETRY_BACKOFF_SECONDS=2.0

# Classification (OpenRouter)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=
PROMPT_VERSION=v1
PROMPT_PATH=prompts/v1.txt
CLASSIFY_MAX_WORKERS=2
CLASSIFY_NOTES_MAX_CHARS=2000
CLASSIFY_MAX_ATTEMPTS=8

# Background runner
RUN_INGEST_EVERY_SECONDS=86400
RUN_CLASSIFY_EVERY_SECONDS=10

# Logging
LOG_LEVEL=INFO
